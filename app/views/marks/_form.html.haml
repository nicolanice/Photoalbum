= form_for @mark do |f|
  -if @mark.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mark.errors.count, "error")} prohibited this mark from being saved:"
      %ul
        - @mark.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :image_id
    = f.text_field :image_id
  .field
    = f.label :mark
    = f.text_field :mark
  .actions
    = f.submit 'Save'
